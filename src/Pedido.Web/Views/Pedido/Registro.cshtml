@model PedidoIndexViewModel
@{
    ViewData["Title"] = "Pedidos";
}


<div class="panel panel-default">
  <div class="panel-heading">Novo Pedido</div>
  <div class="panel-body">

    <form asp-action="NovoPedido" asp-controller="pedido" method="post" >
      <div class="form-group">
        <label for="nomne">Nome </label>
        <input type="text" class="form-control" id="nomne" placeholder="Seu nome :)">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">CPF</label>
        <input type="text" class="form-control" id="cpf" placeholder="CPF">
      </div>
      <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
    
  </div>
</div>
